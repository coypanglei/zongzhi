<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,RtlSymmetry">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_218"
        android:background="@drawable/bg_top" />

    <include layout="@layout/include_title_white_icon" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_95"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@drawable/shape_b_ffffff_c_6" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_16">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_blue_xiahua_line"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_19"
                            tools:text="博库书城徐州有限公司" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="法人代表"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/legal_person_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="法人联系方式"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/legal_person_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="联系人"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/contact_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="联系人电话"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/contact_people_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="复工人数"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/people_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="所属街道"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/belong_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="经营地址"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/address_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="企业类型"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/business_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="行业类型"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/industry_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="统一社会信用代码"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/social_code"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="复工时间"
                                android:textColor="@color/black_333"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/gray_666"
                                android:textSize="@dimen/sp_15"
                                tools:text="" />
                        </LinearLayout>

                        <include layout="@layout/include_lingxing_line" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            tools:listitem="@layout/item_business_detail" />
                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>