<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/include_title" />


    <FrameLayout
        android:id="@+id/map_vessel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp" />


    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar" />

    <LinearLayout
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_110">

        <ImageView
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/icon_my_dingwei" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/common" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statellite_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/normal_layout"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/satellite" />
    </LinearLayout>

    <TextView
        android:id="@+id/address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/transparent48"
        android:maxLines="2"
        android:padding="@dimen/dp_10"
        android:text="具体地址："
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>