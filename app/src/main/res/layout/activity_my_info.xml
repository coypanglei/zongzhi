<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <LinearLayout
            android:id="@+id/head_icon_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/header_image"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/head_icon_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="fitXY" />


        </LinearLayout>

        <include layout="@layout/view_line_full" />

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_name"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_16"
                tools:text="..." />
        </LinearLayout>

        <include layout="@layout/view_line_full" />

        <LinearLayout
            android:id="@+id/gender_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gender"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:drawableEnd="@drawable/right_arrow"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_16"
                tools:text="..." />
        </LinearLayout>

        <include layout="@layout/view_line_full" />

        <LinearLayout
            android:id="@+id/be_born_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/be_born"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/be_born"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:drawableEnd="@drawable/right_arrow"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_16"
                tools:text="..." />
        </LinearLayout>

        <include layout="@layout/view_line_full" />

        <LinearLayout
            android:id="@+id/unit_position_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/unit_position"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/unit_position"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_16"
                tools:text="..." />
        </LinearLayout>

        <include layout="@layout/view_line_full" />

        <LinearLayout
            android:id="@+id/telephone_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/telephone"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />


            <!--android:drawableEnd="@drawable/arrow_icon"-->
            <!--android:drawablePadding="@dimen/dp_8"-->
            <EditText
                android:id="@+id/telephone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_16"
                tools:text="..." />
        </LinearLayout>

        <include layout="@layout/view_line_full" />

        <LinearLayout
            android:id="@+id/id_number_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/id_number"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/id_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:digits="@string/id_card"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_16"
                tools:text="..." />
        </LinearLayout>

        <include layout="@layout/view_line_full" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="RtlCompat">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/address"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/sp_16"
                tools:text="..." />
        </LinearLayout>

        <include
            layout="@layout/view_line_full"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>