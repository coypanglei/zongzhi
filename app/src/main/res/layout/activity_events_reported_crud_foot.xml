<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="处置前"
            android:textColor="@color/gray_666"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/front_handle_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            tools:itemCount="1" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/front_handle_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            tools:itemCount="1" />


        <RelativeLayout
            android:layout_width="@dimen/dp_77"
            android:layout_height="@dimen/dp_77"
            android:layout_marginTop="@dimen/dp_10">

            <LinearLayout
                android:id="@+id/record_view"
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_77"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:background="@drawable/shape_gray_line_d4d4d4"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@drawable/luyin_icon_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_record"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/record_off"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/delete_x"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentEnd="true"
                android:src="@drawable/close_icon"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/is_self_handle"
            android:textColor="@color/gray_666"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/self_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/s_close" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/after_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_20"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="处置后"
            android:textColor="@color/gray_666"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/after_handle_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            tools:itemCount="1" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/after_handle_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            tools:itemCount="1" />


        <RelativeLayout
            android:layout_width="@dimen/dp_77"
            android:layout_height="@dimen/dp_77"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10">

            <LinearLayout
                android:id="@+id/after_record_view"
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_77"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:background="@drawable/shape_gray_line_d4d4d4"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:src="@drawable/luyin_icon_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_record"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <ImageView
                android:id="@+id/after_image_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/record_off"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/after_delete_x"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentEnd="true"
                android:src="@drawable/close_icon"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>