<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_title_submit" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_30">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:text="复工人数（名）"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/work_people_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入复工人数(必填)"
                android:inputType="text"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/view_line_full" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:text="外市人数（名）"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/other_city_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入外市人数(必填)"
                android:inputType="text"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/view_line_full" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:text="外省人数（名）"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/other_province_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入外省人数(必填)"
                android:inputType="text"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/view_line_full" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:text="其中:湖北省、浙江省温州市人数（名）"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/info_hubei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入其中:湖北省、浙江省温州市人数(必填)"
                android:inputType="text"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/view_line_full" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:text="无异常情况人数（名）"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/no_problem_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入无异常情况人数(必填)"
                android:inputType="text"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/view_line_full" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:text="发热咳嗽等情况人数（名）"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/hot_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入发热咳嗽等情况人数(必填)"
                android:inputType="text"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/view_line_full" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:text="隔离观察人数（名）"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/already_look_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入隔离观察人数(必填)"
                android:inputType="text"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/view_line_full" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:text="疑似病例（名）"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/suspected_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入疑似病例(必填)"
                android:inputType="text"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/view_line_full" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:text="确诊病例（名）"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/confirmed_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入确诊病例(必填)"
                android:inputType="text"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_999"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/view_line_full" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>