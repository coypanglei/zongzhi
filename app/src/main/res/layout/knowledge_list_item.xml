<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/shape_dialog_repository_white"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_blue_xiahua_line"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_19"
        android:textStyle="bold"
        android:typeface="serif"
        tools:text="标题" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_10"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/fenlei_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="分类"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_15" />


    </LinearLayout>

    <include layout="@layout/view_line_full" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/biaoqian_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="标签"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>


</LinearLayout>