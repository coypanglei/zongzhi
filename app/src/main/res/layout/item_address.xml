<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/t_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_30"
            android:paddingTop="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_15"
            android:scaleType="center"
            android:src="@drawable/icon_gps"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_name_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16"
            tools:text="姓名" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="@dimen/dp_9"
            android:layout_toLeftOf="@id/iv_address"
            android:layout_toRightOf="@id/tv_name_title"
            android:layout_weight="2"
            android:background="@null"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textColorHint="@color/c9c9cd"
            android:textSize="@dimen/dp_14" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/t_layout"
        android:background="@color/gray_eee" />
</RelativeLayout>