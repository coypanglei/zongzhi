<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dp_340"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_repository_white"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="1"
                android:hint="请输入协同人姓名" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_15"
                android:src="@drawable/search" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="协办说明"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/teamwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:drawableEnd="@drawable/cha"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                tools:text="test" />
        </LinearLayout>

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:hint="@string/please_input_s"
            android:maxLength="150"
            android:minLines="5"
            android:padding="@dimen/dp_10" />

        <Button
            android:id="@+id/confirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_b_3982f6_c_19"
            android:gravity="center"
            android:text="请求协同"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>