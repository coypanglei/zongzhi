<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_307"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_b_ffffff_c_13"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            tools:text="11111111111111111" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_15"
            tools:text="11111111111111111111111111111111111111111111111" />

        <include layout="@layout/view_line_full" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ove"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />


            <View
                android:id="@+id/second_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#FFD6D6D6"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>