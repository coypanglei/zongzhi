<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <include layout="@layout/include_title_submit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_11"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flag_star"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/standard_address_name"
                    android:textColor="@color/gray_666"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/standard_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="@string/address_required"
                    android:singleLine="true"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_bbbbc1"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/view_line" />

            <LinearLayout
                android:id="@+id/select_standard_address_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_11"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flag_star"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/select_tier"
                    android:textColor="@color/gray_666"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/select_standard_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="@dimen/dp_5"
                    android:ellipsize="end"
                    android:hint="@string/required_select"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_bbbbc1"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_up_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_11"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flag_star"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/up_address"
                    android:textColor="@color/gray_666"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/up_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="@dimen/dp_5"
                    android:ellipsize="end"
                    android:hint="@string/required_select"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_bbbbc1"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <include layout="@layout/view_line" />

            <LinearLayout
                android:id="@+id/select_map_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_11"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flag_star"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/map_address"
                    android:textColor="@color/gray_666"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/map_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:hint="@string/required_select"
                    android:maxLines="2"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_bbbbc1"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <include layout="@layout/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_11"
                android:paddingEnd="@dimen/dp_16"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flag_star"
                    android:textColor="@color/red"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="@string/standard_address_code"
                    android:textColor="@color/gray_666"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/standard_address_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="@string/standard_address_code"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_bbbbc1"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <!--<include layout="@layout/view_line" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_11"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_20">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/remark"
                    android:textColor="@color/gray_666"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/theme_background"
                    android:gravity="start"
                    android:hint="@string/remark1"
                    android:maxLength="150"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_bbbbc1"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <include layout="@layout/view_line" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>