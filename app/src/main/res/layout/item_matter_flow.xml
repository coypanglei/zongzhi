<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派单单位"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/send_orders_u"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/sp_16"
            tools:text="11111" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派单人"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/send_orders_p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/sp_16"
            tools:text="11111" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/unit_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处置单位"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/processing_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/sp_16"
            tools:text="11111" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/person_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接单人"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/processor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/sp_16"
            tools:text="11111" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派单方式"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/way"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/sp_16"
            tools:text="11111" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前状态"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/sp_16"
            tools:text="11111" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请求处置时限"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/time_astrict"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/sp_16"
            tools:text="11111" />
    </LinearLayout>

</LinearLayout>