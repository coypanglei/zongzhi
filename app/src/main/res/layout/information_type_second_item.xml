<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_b_ffffff_c_5"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_19"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_19"
    android:paddingBottom="@dimen/dp_15"
    tools:ignore="RtlCompat">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="RtlCompat">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_blue_xiahua_line"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                tools:text="姓名姓名" />

            <TextView
                android:id="@+id/e_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toRightOf="@id/name"
                android:background="@drawable/shape_b_e7f2fd_c_0"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/blue_51a1ff"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray_999"
                tools:text="asdadasdasd"
                android:textSize="@dimen/dp_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/blue_5a93f7"
            android:textSize="11sp"
            tools:text="name" />
    </LinearLayout>

    <Button
        android:id="@+id/input"
        android:layout_width="@dimen/dp_59"
        android:layout_height="@dimen/dp_26"
        android:background="@drawable/shape_b_d3982f6_c_2"
        android:text="@string/go_see"
        android:textColor="@color/blue_3982f6"
        android:textSize="@dimen/sp_12" />
</LinearLayout>