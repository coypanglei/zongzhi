<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_package_leader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_11"
        android:paddingEnd="@dimen/dp_16"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包挂领导:"
            android:textColor="@color/block_000"
            android:textSize="@dimen/dp_15" />

        <EditText
            android:id="@+id/package_leader_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:hint="填写包挂领导"
            android:padding="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black_333"
            android:textColorHint="@color/gray_bbbbc1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_b_3982f6_c_5"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>


    <com.bin.david.form.core.SmartTable
        android:id="@+id/table"
        android:layout_below="@id/ll_package_leader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_11"
      />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_f2f3f4">


        <TextView
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/shape_b_3982f6_c_5"
            android:gravity="center"
            android:text="@string/add_new"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

</RelativeLayout>