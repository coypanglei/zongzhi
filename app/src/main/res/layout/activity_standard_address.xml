<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,RtlSymmetry">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_218"
        android:background="@drawable/standard_icon_bg" />


    <include layout="@layout/include_title_white_icon" />

    <com.weique.overhaul.v2.app.customview.VerticalSwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/bar_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/slogan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_25"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bar_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="@string/slogan1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_95"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@drawable/shape_b_ffffff_c_6" />

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.appbar.AppBarLayout
                        android:id="@+id/appbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:elevation="0dp">
                        <!--跟队-->
                        <!--app:layout_scrollFlags="scroll|enterAlways"-->
                        <!--不跟队-->
                        <!--app:layout_scrollFlags="scroll|snap"-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingRight="@dimen/dp_20"
                            app:layout_scrollFlags="scroll|snap">


                            <TextView
                                android:id="@+id/rank_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@drawable/shape_blue_xiahua_line"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_20"
                                android:textStyle="bold"
                                tools:text="社区信息" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_15">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:minEms="6"
                                    android:text="@string/area_name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15" />

                                <TextView
                                    android:id="@+id/area_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/gray_999"
                                    android:textSize="@dimen/sp_15"
                                    tools:text="同昌居委会" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_15">

                                <TextView
                                    android:id="@+id/rank_address_code"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:minEms="6"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15"
                                    tools:text="社区地址编码" />

                                <TextView
                                    android:id="@+id/area_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/gray_999"
                                    android:textSize="@dimen/sp_15"
                                    tools:text="320312009001" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_15">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:minEms="6"
                                    android:text="@string/code_myself"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15" />

                                <TextView
                                    android:id="@+id/code_myself"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/gray_999"
                                    android:textSize="@dimen/sp_15"
                                    tools:text="001" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_15">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:minEms="6"
                                    android:text="@string/tier_code"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15" />

                                <TextView
                                    android:id="@+id/tier_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/gray_999"
                                    android:textSize="@dimen/sp_15"
                                    tools:text="565659898" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_15">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:minEms="6"
                                    android:text="@string/tier"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15" />

                                <TextView
                                    android:id="@+id/tier_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/gray_999"
                                    android:textSize="@dimen/sp_15"
                                    tools:text="565659898" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/dp_15">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:minEms="6"
                                    android:text="@string/sub_info"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15" />

                                <TextView
                                    android:id="@+id/sub_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/gray_999"
                                    android:textSize="@dimen/sp_15"
                                    tools:text="3个小区/街路巷" />

                            </LinearLayout>

                            <include layout="@layout/include_lingxing_line" />
                        </LinearLayout>
                    </com.google.android.material.appbar.AppBarLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.weique.overhaul.v2.app.customview.VerticalSwipeRefreshLayout>
</RelativeLayout>